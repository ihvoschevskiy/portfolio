{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "paths": {
      "@data/*": ["data/*"],
      "@entities/*": ["entities/*"],
      "@errors/*": ["errors/*"],
      "@helpers/*": ["helpers/*"],
      "@middleware/*": ["middleware/*"],
      "@services/*": ["services/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022"
  },
  "exclude": ["build", "node_modules"],
  "include": ["src"]
}
